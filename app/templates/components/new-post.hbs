<div class="row">
  <div class="col-md-6 col-md-offset-3 well">
    <h3>Create New Post</h3>
    <form id="new-post">
      <div class="form-group">
        <label for="title">Post Title:</label>
        {{input value=title id="title" required="required"}}
      </div>
      <div class="form-group">
        <label for="image">Image URL:</label>
        {{input value=image id="image" required="required"}}
      </div>
      <div class="form-group">
        <label for="date">Date:</label>
        {{input value=date id="date" required="required"}}
      </div>
      <div class="form-group">
        <label for="body">Body Content:</label>
        {{input value=body id="body" required="required"}}
      </div>
      <button {{action 'savePost'}}>Create</button>
    </form>
  </div>
</div>

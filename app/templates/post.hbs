<div class="row">
  <div class="col-md-6 col-md-offset-3 well text-center">
    <img class="center-block img-responsive" src={{model.image}} alt={{model.title}}>

    <h2>{{model.title}}</h2>
    <h4>{{model.date}}</h4>

    <p>{{model.body}}</p>
    {{update-post post=model update="update"}}
    {{delete-post post=model destroyPost="destroyPost"}}
  </div>
</div>
<div class="row">
  <div class="col-md-6 col-md-offset-3 well">
    {{new-comment post=model saveComment="saveComment"}}
    <ul>
      {{#each model.comments as |comment|}}
        {{comment-tile comment=comment}}
      {{/each}}
    </ul>
  </div>
</div>
